<header class="page-header">
  <h1>Randomly Generated Idea</h1>
</header>
<div class='row'>
  <section class='span12'>
    <h1><%= @idea.idea %></h1>
    <h2><%= @idea.categories %></h2>
  </section>
</div>
<div class="row">
  <div class="span12">
    <a id="skip" href="/random" class="btn btn-danger">Skip</a>
    <form action="/random" method="post" class="form-inline">
      <input type="hidden" name="idea" value= "<%= @idea.idea %>">
      <input type="hidden" name="categories" value= "<%= @idea.categories %>">
      <input type="submit" value="Approve" class="btn btn-success">
    </form>
    <a href="/" >Back to list</a>
  </div>
</div>